<tbody>
  <% if @book_comments %>
    <% @book_comments.each do |book_comment| %>
      <tr>
        <td>
          <%= link_to (book_comment.user) do %>
            <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size: "40x40") %><br>
            <%= book_comment.user.name %>
          <% end %>
        </td>
        <td>
          <%= book_comment.comment %>
        </td>
        <% if book_comment.user == current_user %>
        <td>
          <%= link_to "Destroy", book_book_comment_path(@book,book_comment), method: :delete, remote: true, class: "btn-sm btn-danger" %>
        </td>
        <% else %>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  <% end %>
</tbody>